{% extends 'base.html.twig' %}

{% block title %}Voiture{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
    <h1>Voiture</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ voiture.nom }}</td>
            </tr>
            <tr>
                <th>Mod√®le</th>
                <td>{{ voiture.modele }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ voiture.marques.nom }}</td>
            </tr>
            <tr>
                <th>Couleur</th>
                <td>{{ voiture.couleur }}</td>
            </tr>
             <tr>
                <th>Porte</th>
                <td>{{ voiture.porte }}</td>
            </tr>
             <tr>
                <th>Place</th>
                <td>{{ voiture.place }}</td>
            </tr>
            <tr>
                <th>Prix par jour</th>
                <td>{{ voiture.prixparjour }}</td>
            </tr>
            <tr>
                <th>Remise</th>
                <td>{{ voiture.remise }}&nbsp;%</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('images/' ~ voiture.image) }}" width="100px" heigth="100px" /></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('voiture_index') }}" class="btn btn-secondary">liste des voitures</a>
{% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('voiture_edit', {'id': voiture.id}) }}" class="btn btn-success">modifier</a>

    {{ include('voiture/_delete_form.html.twig') }}
{% endif %}
    </div>
{% endblock %}
