{% extends 'base.html.twig' %}

{% block title %}Marque{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
    <h1>Marque</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ marque.nom }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('images/marques/' ~ marque.image) }}" width="100px" heigth="100px" /></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('marque_index') }}" class="btn btn-secondary">Liste des marques</a>
{% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('marque_edit', {'id': marque.id}) }}" class="btn btn-success">Modifier</a>

    {{ include('marque/_delete_form.html.twig') }}
{% endif %}
    </div>
{% endblock %}
