{% extends 'template.html.twig' %}

{% block title %}Location Voitures{% endblock %}

{% block body %}

 <div class="ftco-blocks-cover-1">
      <div class="ftco-cover-1 overlay innerpage" style="background-image: url('images/hero_2.jpg')">
        <div class="container">
          <div class="row align-items-center justify-content-center">
            <div class="col-lg-6 text-center">
              <h1>Contactez nous</h1>
            </div>
          </div>
        </div>
      </div>
    </div>

      <div class="site-section bg-light" id="contact-section">
      <div class="container">
        <div class="row justify-content-center text-center">
        <div class="col-7 text-center mb-5">
          <h2>Contactez-nous ou utilisez ce formulaire pour louer une voiture</h2>
    
            {% for message in app.flashes('success') %}
            <div class="alert alert-success">
            {{ message }}
            </div>
            {% endfor %}
 
        </div>
        </div>
        <div class="row">
          <div class="col-lg-8 mb-5" >
            <!--<form action="#" method="post">-->
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}, {'method': 'GET'}) }}
            <div class="form-group row">
                <div class="col-md-12">
                 {{ form_widget(form.voiture, {'id': 'voit','attr': {'class': 'form-control', 'required':'required'}}) }}
                </div>
              </div>


               <div class="form-group row">
               <div class="col-md-6">
              <input type="text" class="form-control" placeholder="Nb voiture" name="nbv">
               </div>
                <div class="col-md-6">
              <input type="text" class="form-control" placeholder="prix par jour" name="prixpj" readonly>
               </div>
              </div>


              <div class="form-group row">
               <div class="col-md-6">
                  <!--<input type="text" class="form-control" placeholder="Prénom" required>-->
                   {{ form_widget(form.prenom, {'id': 'prenomclt','attr': {'class': 'form-control','placeholder': 'Prénom', 'required':'required' }}) }}
                </div>
                <div class="col-md-6 mb-4 mb-lg-0">
                 <!--<input type="text" class="form-control" placeholder="Nom" required>-->
                  {{ form_widget(form.nom, {'id': 'nomclt','attr': {'class': 'form-control','placeholder': 'Nom', 'required':'required' }}) }}
                </div>
              </div>

             <div class="form-group row">
                <div class="col-md-12">
                  <!--<input type="text" class="form-control" placeholder="Adresse" required>-->
                   {{ form_widget(form.adresse, { 'id': 'adresse','attr': {'class': 'form-control','placeholder': 'Adresse', 'required':'required'}}) }}
                </div>
              </div>

              <div class="form-group row">
                <div class="col-md-12">
                  <!--<input type="text" class="form-control" placeholder="Email" required>-->
                  {{ form_widget(form.email, { 'id': 'email','attr': {'class': 'form-control','placeholder': 'Email', 'pattern':'.+@gmail.com', 'required':'required'}}) }}
                </div>
              </div>

              <div class="form-group row">
                <div class="col-md-12">
                  <!--<input type="text" class="form-control" placeholder="N°Télèphone" required>-->
                  {{ form_widget(form.tel,{ 'id': 'tel','attr': {'class': 'form-control','placeholder': 'N°Télèphone', 'pattern':'[0-9]{8}', 'required':'required'}}) }}
                </div>
              </div>
              
              

              <div class="form-group row">
                <div class="col-md-6 mr-auto">
                 <!--<input type="submit" class="btn btn-block btn-primary text-white py-3 px-5" value="Envoyer">-->
                  <button class="btn btn-block btn-primary text-white py-3 px-5">{{ button_label|default('Envoyer') }}</button>
                </div>

                <div class="col-md-6 mr-auto" >
                <button onclick="nomFonctionJS();" id="list" class="btn btn-block btn-primary text-white py-3 px-5">Devis</button>
                </div>
             
              </div>

              {{ form_end(form) }}
            <!--</form>-->
          </div>
          <div class="col-lg-4 ml-auto">
            <div class="bg-white p-3 p-md-5">
              <h3 class="text-black mb-4">Informations de contact</h3>
              <ul class="list-unstyled footer-link">
                <li class="d-block mb-3">
                  <span class="d-block text-black">Adresse:</span>
                  <span>cite riadh sousse</span></li>
                <li class="d-block mb-3"><span class="d-block text-black">Télèphone:</span><span>29314365</span></li>
                <li class="d-block mb-3"><span class="d-block text-black">Email:</span><span>ksilq@gmail.com<br>benatia@gmail.com</span></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>

{% endblock %}
