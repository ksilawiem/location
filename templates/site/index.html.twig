{% extends 'template.html.twig' %}

{% block title %}Location Voitures{% endblock %}

{% block body %}

   {% for voiture in Voitures %}
 <div class="ftco-blocks-cover-1">
      <div class="ftco-cover-1 overlay" style="background-image: url('images/{{voiture.image}}')">
        <div class="container">
          <div class="row align-items-center">
            <div class="col-lg-5">
              <div class="feature-car-rent-box-1">
                <h3>{{voiture.nom}}</h3>
                <ul class="list-unstyled">
                  <li>
                    <span>Portes</span>
                    <span class="spec">{{voiture.porte}}</span>
                  </li>
                  <li>
                    <span>Places</span>
                    <span class="spec">{{voiture.place}}</span>
                  </li>
                  <li>
                    <span>Bagage</span>
                    <span class="spec">{{voiture.bagage}}</span>
                  </li>
                  <li>
                    <span>Transmission</span>
                    <span class="spec">{{voiture.transmission}}</span>
                  </li>
                  <li>
                    <span>Âge</span>
                    <span class="spec">{{voiture.age}}</span>
                  </li>
                </ul>
                <div class="d-flex align-items-center bg-light p-3">
                  <span>{{voiture.prixparjour}}DT/jour</span>
                  <a href="/contact?nom={{voiture.nom}}&prixj={{voiture.prixparjour}}" class="ml-auto btn btn-primary">Louer Maintenant</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
{% endfor %}


    <div class="site-section pt-0 pb-0 bg-light">
      <div class="container">
        <div class="row">
          <div class="col-12">
           
              <!--<form class="trip-form">-->
               {{ form_start(form, {'attr': {'class': 'trip-form'}}) }}
            {% for message in app.flashes('success') %}
            <div class="alert alert-success">
            {{ message }}
            </div>
            {% endfor %}
                <div class="row align-items-center mb-4">
            
                  <div class="col-md-6">
                    <h3 class="m-0">Commencez votre voyage ici</h3>
                  </div>
      
                  <div class="col-md-6 text-md-right">
                    <span class="text-primary">{{VoitsC}}</span> <span>voitures disponibles</span></span>
                  </div>
                  
                </div>
                <div class="row">
                  <div class="form-group col-md-2">
                    <label for="cf-1">D'où êtes-vous ?</label>
                    <!--<input type="text" id="cf-1" placeholder="" class="form-control">-->
                    {{ form_widget(form.votrelieu, {'attr': {'class': 'form-control', 'required':'required' }}) }}
                  </div>
                  <div class="form-group col-md-2">
                    <label for="cf-2">Où vas-tu ?</label>
                    <!--<input type="text" id="cf-2" placeholder="" class="form-control">-->
                     {{ form_widget(form.lieualler, {'attr': {'class': 'form-control', 'required':'required' }}) }}
                  </div>
                  <div class="form-group col-md-2">
                    <label for="cf-2">N° TÉL</label>
                    <!--<input type="text" id="cf-2" placeholder="" class="form-control">-->
                     {{ form_widget(form.tel, {'attr': {'class': 'form-control', 'pattern':'[0-9]{8}', 'required':'required' }}) }}
                  </div>
                  <div class="form-group col-md-3">
                    <label for="cf-3">Date du voyage</label>
                    <!--<input type="text" id="cf-3" placeholder="" class="form-control datepicker px-3">-->
                     {{ form_widget(form.datevoyage, {'attr': { 'required':'required' }}) }}
                  </div>
                  <div class="form-group col-md-3">
                    <label for="cf-4">Date de retour</label>
                    <!--<input type="text" id="cf-4" placeholder="" class="form-control datepicker px-3">-->
                     {{ form_widget(form.dateretour, {'attr': {'required':'required' }}) }}
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-6">
                    <!--<input type="submit" value="Envoyer" class="btn btn-primary">-->
                     <button class="btn btn-primary">{{ button_label|default('Envoyer') }}</button>
                  </div>
                </div>
                 {{ form_end(form) }}
              <!--</form>-->
            </div>
        </div>
      </div>
    </div>

    

    <div class="site-section bg-light" >
      <div class="container">
          <div class="row justify-content-center text-center mb-3">
          <div class="col-7 text-center mb-5">
            <h2>Nos Offres</h2>
            <p class="mb-5">Vous offrir un service premium et une voiture de location qui vous conviennent. <br>
            Notre personnel hautement qualifié fera tout pour satisfaire vos envies et vos besoins. </p>
            </div>
            </div>
          </div>
        </div>
      </div>
  



    <div class="site-section section-3 mb-3"  style="background-image: url('images/hero_2.jpg');">
      <div class="container">
        <div class="row">
          <div class="col-12 text-center mb-5">
            <h2 class="text-white">Nos Services</h2>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-4">
            <div class="service-1">
              <span class="service-1-icon">
                <span class="flaticon-car-1"></span>
              </span>
              <div class="service-1-contents">
                <h3>Réparation</h3>
              </div>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="service-1">
              <span class="service-1-icon">
                <span class="flaticon-traffic"></span>
              </span>
              <div class="service-1-contents">
                <h3>Accessoires de voiture</h3>
              </div>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="service-1">
              <span class="service-1-icon">
                <span class="flaticon-valet"></span>
              </span>
              <div class="service-1-contents">
                <h3>Posséder une voiture</h3>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>


<div class="container site-section mb-3">
      <div class="row justify-content-center text-center">
        <div class="col-7 text-center mb-5">
          <h2>Comment ça marche</h2>
        </div>
      </div>
      <div class="how-it-works d-flex">
        <div class="step">
          <span class="number"><span>01</span></span>
          <span class="caption">Date &amp; Lieu</span>
        </div>
        <div class="step">
          <span class="number"><span>02</span></span>
          <span class="caption">Voiture</span>
        </div>
        <div class="step">
          <span class="number"><span>03</span></span>
          <span class="caption">Détails</span>
        </div>
        <div class="step">
          <span class="number"><span>04</span></span>
          <span class="caption">Check-out</span>
        </div>
        <div class="step">
          <span class="number"><span>05</span></span>
          <span class="caption">Terminé</span>
        </div>

      </div>
    </div>




 <div class="site-section bg-light mb-3">
      <div class="container">
        <div class="row justify-content-center text-center mb-3">
          <div class="col-7 text-center mb-5">
            <h2>Nos Voitures</h2>
          </div>
        </div>

        <div class="row">
            {% for voiture in Voits %}
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="post-entry-1 h-100">
                <img src="images/{{voiture.image}}" alt="Image" class="img-fluid" width="800px" heigth="500px" >
              <div class="post-entry-1-contents">
                
                <h5 class="text-primary">{{voiture.nom}} </h5>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
         <div class="row justify-content-center text-center mb-5">
          <div class="col-7 text-center mb-5">
 <span class="meta d-inline-block mb-6"> <a href="/voitures" class="btn btn-primary">Voir Plus</a></span>
        </div>
        </div
      </div>
    </div>
</div>



<div class="container site-section mb-3">
      <div class="container">
        <div class="row justify-content-center text-center mb-5 section-2-title">
          <div class="col-md-6">
            <h2 class="text-primary mb-4"">Nos Marques</h2>
           
          </div>
        </div>
        <div class="row align-items-stretch">
{% for marque in Marq %}
          <div class="col-lg-3 col-md-3 mb-3">
            <div class="post-entry-1 h-100 person-1">
              
                <img src="images/marques/{{marque.image}}"  class="img-fluid">
            
              <div class="post-entry-1-contents">
                <h6>{{marque.nom}}</h6>
              </div>
            </div>
          </div>
{% endfor %}

        </div>
      </div>
    </div>


{% endblock %}